<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".outlet.employee.AddPegawaiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_screen"
        android:padding="16dp">

        <ImageView
            android:id="@+id/add_img_pegawai"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_pegawai" />

        <TextView
            android:id="@+id/tximgempl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/tambah_gambar"
            android:textColor="@color/text_color"
            android:textSize="17sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.9"
            app:cardCornerRadius="16dp">

            <EditText
                android:id="@+id/add_name_pegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_stroke"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/nama_pegawai"
                android:padding="12dp"
                android:textColor="@color/text_color" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pekerjaan_jabatan"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="24dp"
            android:textColor="@color/text_color"
            android:layout_marginStart="8dp"/>

        <Spinner
            android:id="@+id/spin_job_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.9"
            app:cardCornerRadius="16dp">

            <EditText
                android:id="@+id/add_phone_pegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_stroke"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/no_handphone"
                android:padding="12dp"
                android:inputType="phone"
                android:textColor="@color/text_color" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bekerja_di_outlet"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="24dp"
            android:textColor="@color/text_color"
            android:layout_marginStart="8dp"/>

        <Spinner
            android:id="@+id/spin_in_outlet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.9"
            app:cardCornerRadius="16dp">

            <EditText
                android:id="@+id/add_email_pegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_stroke"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/email"
                android:padding="12dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/text_color" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.9"
            app:cardCornerRadius="16dp">

            <EditText
                android:id="@+id/add_pin_pegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_stroke"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/no_pin_6_angka"
                android:padding="12dp"
                android:inputType="numberPassword"
                android:textColor="@color/text_color" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_add_pegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/primary"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/txaddempl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/tambah_pegawai"
                android:textSize="19sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_semibold"
                android:padding="12dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_del_pegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#E91E63"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Hapus Pegawai"
                android:textSize="19sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_semibold"
                android:padding="12dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>