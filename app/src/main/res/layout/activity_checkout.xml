<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.items.checkout.CheckoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:alpha="0.9"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <EditText
                android:id="@+id/nama_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/nama_pelanggan"
                android:padding="12dp"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:alpha="0.9"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <EditText
                android:id="@+id/nohp_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/no_handphone"
                android:padding="12dp"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/produk_yang_dibeli"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_product_checkout"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_launcher_background"/>

                <TextView
                    android:id="@+id/name_product_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/img_product_checkout"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/nama_produk" />

                <TextView
                    android:id="@+id/price_product_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/harga_jual"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_below="@id/name_product_checkout"
                    android:layout_toEndOf="@id/img_product_checkout"
                    android:layout_margin="4dp"/>

                <TextView
                    android:id="@+id/tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jumlah_beli"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_below="@id/img_product_checkout"
                    android:layout_margin="4dp"/>

                <ImageButton
                    android:id="@+id/btn_add_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:backgroundTint="@color/primary"
                    android:layout_below="@id/tx"
                    android:layout_marginStart="4dp"/>

                <TextView
                    android:id="@+id/tx_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20sp"
                    android:layout_toEndOf="@id/btn_add_count"
                    android:layout_below="@id/tx"
                    android:layout_margin="4dp"/>

                <ImageButton
                    android:id="@+id/btn_min_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_min"
                    android:backgroundTint="@color/primary"
                    android:layout_below="@id/tx"
                    android:layout_toEndOf="@id/tx_count"
                    android:layout_marginStart="4dp"/>

                <EditText
                    android:id="@+id/txcatatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_add_count"
                    android:layout_margin="4dp"
                    android:hint="@string/catatan"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/poppins_medium"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_bayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/primary"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/tx_total_bayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/bayar"
                android:textSize="19sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_semibold"
                android:padding="12dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>