<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/name_product_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es Teh Manis"
        android:textSize="17sp"
        android:fontFamily="monospace"/>

    <TextView
        android:id="@+id/price_product_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp_20000"
        android:textSize="17sp"
        android:layout_alignParentEnd="true"
        android:fontFamily="monospace"/>

    <TextView
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_margin="2dp"
        android:textSize="17sp"
        android:layout_toStartOf="@id/price_product_receipt"
        android:fontFamily="monospace"/>

    <TextView
        android:id="@+id/quantity_product_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="17sp"
        android:layout_toStartOf="@id/x"
        android:layout_marginEnd="4dp"
        android:fontFamily="monospace"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/price_product_receipt"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="#959393"/>
</RelativeLayout>