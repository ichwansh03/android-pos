<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".product.items.checkout.CashPaymentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_bayar"
        android:textSize="17sp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/poppins_semibold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/total_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp_20000"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/text_color"
        android:layout_gravity="center_horizontal"
        android:textSize="32sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.9"
        app:cardCornerRadius="16dp">

        <EditText
            android:id="@+id/cash_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_stroke"
            android:fontFamily="@font/poppins_medium"
            android:inputType="number"
            android:hint="@string/masukkan_jumlah_uang"
            android:padding="12dp"
            android:textColor="@color/text_color" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_pay_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/primary"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_horizontal"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/bayar"
            android:textSize="19sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>