<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tx_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_26_3_2023"
            android:fontFamily="@font/poppins_medium"
            android:layout_margin="4dp"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tx_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama_pelanggan"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/tx_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tx_name"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_shape_lunas"
            android:fontFamily="@font/poppins_medium"
            android:padding="4dp"
            android:text="@string/rp_20000"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_profit" />

        <TextView
            android:id="@+id/tx_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tx_name"
            android:layout_margin="4dp"
            android:layout_toEndOf="@id/tx_total"
            android:background="@drawable/bg_shape_cat"
            android:fontFamily="@font/poppins_medium"
            android:padding="4dp"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_cart" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>