<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg_screen"
    tools:context=".InfoAkunActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_outlet"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/outlet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Outlet: "
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/outlet_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat Outlet: "
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/branch_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Outlet: "
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/employee_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Pegawai: "
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="16dp"/>
</LinearLayout>