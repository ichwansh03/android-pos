<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".report.LaporanFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_penjualan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/laporan_penjualan"
                android:fontFamily="@font/poppins_medium"
                android:textSize="17sp"
                android:layout_margin="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Produk"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="22sp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_selling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lihat_detail"
                android:fontFamily="@font/poppins_medium"
                android:layout_margin="8dp"
                android:layout_gravity="end"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_rugilaba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/laporan_keuangan"
                android:fontFamily="@font/poppins_medium"
                android:textSize="17sp"
                android:layout_margin="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rp_20000"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="22sp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_profit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lihat_detail"
                android:fontFamily="@font/poppins_medium"
                android:layout_margin="8dp"
                android:layout_gravity="end"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>