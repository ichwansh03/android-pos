<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_pegawai"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_pegawai"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_pegawai"
            android:layout_margin="12dp"/>

        <TextView
            android:id="@+id/nama_pegawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pusat"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_toEndOf="@id/img_pegawai"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/jabatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="@string/pusat"
            android:fontFamily="@font/poppins_medium"
            android:layout_toEndOf="@id/img_pegawai"
            android:layout_below="@id/nama_pegawai"/>

        <TextView
            android:id="@+id/outlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="@string/pusat"
            android:fontFamily="@font/poppins_medium"
            android:layout_toEndOf="@id/jabatan"
            android:layout_below="@id/nama_pegawai"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/pusat"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_toEndOf="@id/img_pegawai"
            android:drawablePadding="4dp"
            android:background="@drawable/bg_shape_lunas"
            android:padding="4dp"
            android:layout_below="@id/outlet"
            app:drawableStartCompat="@drawable/ic_phone" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>