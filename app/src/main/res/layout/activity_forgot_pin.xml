<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".verification.ForgotPinActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:alpha="0.9"
        android:layout_margin="8dp">

        <EditText
            android:id="@+id/txemail_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_shape_stroke"
            android:textColor="@color/text_color"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp"
            tools:ignore="TextFields" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:alpha="0.9"
        android:background="@drawable/bg_shape_stroke"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/txpin_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pin_baru"
            android:background="@drawable/bg_shape_stroke"
            android:inputType="numberPassword"
            android:focusableInTouchMode="true"
            android:textColor="@color/text_color"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:alpha="0.9"
        android:background="@drawable/bg_shape_stroke"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/txpin_new_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/konfirmasi_pin_baru"
            android:background="@drawable/bg_shape_stroke"
            android:inputType="numberPassword"
            android:focusableInTouchMode="true"
            android:textColor="@color/text_color"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_save_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/primary"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/simpan"
            android:textSize="19sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>